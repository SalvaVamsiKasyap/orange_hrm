pipeline {
    agent any

    stages {
        stage('Setup') {
            steps {
                // Clone the repository containing the pytest framework
                git 'https://github.com/SalvaVamsiKasyap/orange_hrm.git'
                // Install the necessary dependencies
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                // Run pytest with the specified options
                sh 'pytest -k unsuc --html=report.tml'
            }
        }
    }
}
