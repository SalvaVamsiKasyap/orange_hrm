pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from Git repository
                git branch: 'main', url: 'https://github.com/SalvaVamsiKasyap/orange_hrm.git'
            }
        }
        stage('Run Tests') {
            steps {
                // Run the Pytest tests with HTML report generation
                bat 'cd ptests'
                bat 'pytest --html=report.html'
            }
            post {
                // Archive the test reports and HTML report
                always {
                    junit 'reports/**/*.xml'
                    archiveArtifacts artifacts: 'report.html', fingerprint: true
                }
            }
        }
    }
}
